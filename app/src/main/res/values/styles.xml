        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:textColorPrimary">@color/common_google_signin_btn_text_dark_focused</item>
        <item name="android:textColorPrimaryInverse">@color/common_google_signin_btn_text_dark_default</item>
        <item name="colorPrimaryDark">@color/common_google_signin_btn_text_dark_focused</item>
        <item name="android:textColorSecondaryInverse">
            @color/common_google_signin_btn_text_dark_default
        </item>
        <item name="android:colorForeground">@color/common_google_signin_btn_text_dark_focused</item>
