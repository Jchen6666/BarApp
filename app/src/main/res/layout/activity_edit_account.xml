<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAccountActivity">

    <TextView
        android:id="@+id/TextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="35dp"
        android:text="name"
        />

    <EditText
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:id="@+id/editAccountName"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/TextAge"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/TextName"
        android:layout_marginTop="123dp"
        android:text="age" />

    <EditText
        android:id="@+id/editAccountAge"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextAge"
        android:layout_marginEnd="39dp"
        android:layout_alignStart="@+id/editAccountName"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/TextName"
        android:layout_marginTop="201dp"
        android:text="gender"
        android:id="@+id/textAccountGender"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textAccountGender"
        android:layout_marginEnd="126dp"
        android:id="@+id/spinnerGender"/>

    <Button
        android:id="@+id/updateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="245dp"
        android:text="UPDATE" />
</RelativeLayout>